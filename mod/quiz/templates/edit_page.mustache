{{!
    @template mod_quiz/edit_page

    Actions bar at the top of the various quiz edit pages.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * overridesnav - must alwasy be present.
    * addoverridebutton - should only be present if the user has permission to add a new override.

    Example context (json):
    {
        "heading": "Question",
        "quizinformation": {
            "currentstatus": "url_select_test",
            "explanation": "aaaa",
            "quesitoncount": "vvvv"
        },
        "maximumgradeinput": {
            "hiddenparam": <input type="hidden" name="sesskey" value="q7odw4i3Gr" />,
            "size": "12",
            "value": "10.00",
            "sesskey: "abc"
        },
        "repaginatebutton": {
            "repaginate": <input type="hidden" name="sesskey" value="q7odw4i3Gr" />
        },
        "selectmultiplebutton": {
            "selectmultiple": <input type="hidden" name="sesskey" value="q7odw4i3Gr" />
        },
        "totalmarks": {
            "totalmark": "10.00" />
        },
        "startsection": [
            {
                "sectionid": "1",
                "sectionstyle": "shuffled",
                "sectionheading": "heading"
            },
            {
                "sectionid": "1",
                "sectionstyle": "shuffled",
                "sectionheading": "heading"
        }
        "questionsinsection": 'troi oi'
    }
}}
{{{heading}}}
{{{warnings}}}
<div class="mod_quiz-edit-top-controls">
    <div class="d-flex justify-content-between flex-wrap mb-1">
        <div class="d-flex align-items-center justify-content-around">
            {{#quizinformation}}
                {{> mod_quiz/quiz_information}}
            {{/quizinformation}}
        </div>

        {{#maximumgradeinput}}
            {{> mod_quiz/maximum_grade_input}}
        {{/maximumgradeinput}}
    </div>
    <div class="d-flex justify-content-between flex-wrap mb-1">
        <div class="mod_quiz-edit-action-buttons btn-group edit-toolbar" role="group">
            {{#repaginatebutton}}
                {{> mod_quiz/repaginate_button}}
            {{/repaginatebutton}}
            {{#selectmultiplebutton}}
                {{> mod_quiz/selectmultiple_button}}
            {{/selectmultiplebutton}}
        </div>
        <div class="d-flex flex-column justify-content-around">
            {{#totalmarks}}
                {{> mod_quiz/total_marks}}
            {{/totalmarks}}
        </div>
    </div>
        {{#selectmultiplecontrols}}
        {{> mod_quiz/selectmultiple_controls}}
        {{/selectmultiplecontrols}}
    <ul class="slots" role="presentation">
        {{>mod_quiz/section}}
    </ul>
</div>
{{{questionchooser}}}
